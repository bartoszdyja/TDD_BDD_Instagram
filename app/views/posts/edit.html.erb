<h1 class="center-align">Edit post</h1>
<%= form_for @post, url: {action: "update"}, html: {:multipart => true, class: "nifty_form"} do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>

  <div class="row">
    <div class="input-field ">
      <%= f.text_field :title %>
      <label for="last_name">Title</label>
  </div>
  </div>
  
  <div class="row">
    <div class="input-field ">
      <%= f.text_field :description %>
      <label for="last_name">Description</label> 
  </div>
  </div>
    <div class="row">
    <%=image_tag @post.picture %>
    <div class="file-field input-field">
    <input id="pic"  class="file-path validate" type="text"/>
    <label for="pic">Picture</label>
    <%= f.file_field :picture %>  
    </div>
    </div>
    
  <div class="row">  
  <button class="btn waves-effect waves-light" type="submit" name="commit">Submit
    <i class="material-icons">send</i>
  </button>
  </div>
        
<% end %>