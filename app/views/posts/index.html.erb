<div class="center-align">
<% if user_signed_in? %>
	<p><%= link_to '<i class="material-icons">add</i>'.html_safe, new_post_path, class: 'btn-floating btn-large waves-effect waves-light red' %> </p>
<% end %>
</div>

<div class="row">
	<% @posts.each do |p| %>
    <div class="col s12 m3">
     
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="<%= p.picture %>">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= p.title %><i class="material-icons right">more_vert</i></span>
      <p>
        <% if current_user %>
          <div id="post-<%=p.id%>"><%=p.votes_for.size %>
          <%= link_to 'Like', post_upvote_path(p), method: :put, remote: true %>
          </div>
        <% else %>
          <%= pluralize(p.votes_for.size, 'like') %>
          <% end %>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= p.title %><i class="material-icons right">close</i></span>
      <p><%= p.description %></p>
      <p>Email: <%= p.user.email %></p>
      <p>Added by:<%= p.author %></p>
      <p> <%= link_to 'Visit', p %></p>
    </div>
  </div>
            
    </div>
	<% end %>
</div>


<div id='post'></div>