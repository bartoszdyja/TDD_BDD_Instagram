<div class="center-align">
<% if user_signed_in? %>
	<p><%= link_to '<i class="material-icons">add</i>'.html_safe, new_post_path, class: 'btn-floating btn-large waves-effect waves-light red' %> </p>
<% end %>
</div>

<div class="row">
	<% @posts.each do |p| %>
    <div class="col s12 m3">
      <div class="card">
        <div class="card-image">
          <img src='images/sample.jpg'>
        </div>
        <div class="card-content">
          <p><%=link_to p.title, p %></p>

        </div>
      </div>
    </div>
	<% end %>
</div>


